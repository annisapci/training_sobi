<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_report_invoice_document" inherit_id="account.report_invoice_document">

            <xpath expr="//div/div/div[@name='invoice_address']" position="replace">
                <div name="invoice_address" class="col-xs-7">
                    <strong>Bill to:</strong>
                    <address t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                </div>
            </xpath>

            <xpath expr="//div/div/div[@name='invoice_address']" position="after">
                <div name="invoice_contact" class="col-xs-5">
                    <strong>Contact:</strong>
                    <t t-esc="o.partner_id.child_ids.filtered(lambda x: x.type == 'contact')[0].name"/>
                </div>
            </xpath>

            <xpath expr="//div/p[@t-if='o.fiscal_position_id.note']" position="after">
                <t t-set="aj" t-value="request.env['account.journal'].search([('currency_id', '=', o.currency_id.id)])"/>
                <t t-foreach="aj" t-as="bank">
                    <t t-esc="bank.name"/> (<t t-esc="bank.currency_id.name"/>)- <t t-esc="bank.bank_account_id.acc_number"/><br/>
                </t>
            </xpath>

        </template>

        <template id="custom_report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
            <xpath expr="//t[@t-call='web.html_container']" position="after">
                <t t-foreach="docs" t-as="o">
                    <t t-if="o.company_id.id == 1">
                        <t t-call="account.report_invoice_document_with_payments" t-lang="o.partner_id.lang"/>
                   </t>
                </t>
            </xpath>
        </template>

    </data>
</odoo>